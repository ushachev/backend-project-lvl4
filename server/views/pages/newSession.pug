extends ../layouts/unauthenticated.pug

block content
  .row.position-relative.mb-n5(style='z-index: 1;')
    .col-auto.mx-auto
      .bg-dark
        .card.border-0
          .card-body
            h1.card-title вход в сервис
  .row
    .col-5.mx-auto.bg-dark
      form.p-5.mt-3(action=route('session'), method='post')
        fieldset.mb-4
          +input('email', 'email*', values)(type='email')
          +input('password', 'пароль*')(type='password')
        +submit('войти')(class='btn-block')
