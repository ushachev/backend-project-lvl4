extends ../layouts/unauthenticated.pug

block content
  .row.position-relative.mb-n5(style='z-index: 1;')
    .col-auto.mx-auto
      .bg-dark
        .card.border-0
          .card-body
            h1.card-title регистрация
  .row
    .col-5.mx-auto.bg-dark
      form.p-5.mt-3(action=route('users'), method='post')
        fieldset.mb-4
          +input('firstName', 'имя*', 'user', values, errors)(type='text')
          +input('lastName', 'фамилия*', 'user', values, errors)(type='text')
          +input('email', 'email*', 'mail', values, errors)(type='email')
          +input('password', 'пароль*', 'key', values, errors)(type='password')
          +input('repeatedPassword', 'повторите пароль*', 'repeat', values, errors)(type='password')
        +submit('сохранить')(class='btn-block')
