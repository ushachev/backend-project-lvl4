extends ../layouts/application.pug

block content
  .row
    .col
      .h4= t('views.statuses.edit.status')
  .row
    .col
      form(action=`/statuses/${values.id}`, method='post')
        +overrideInput('patch')
        .form-row
          .col-12.col-sm-8
            +input('name', null, null, values, errors)
          .col-12.col-sm-4
            +submit(t('views.statuses.edit.submit'))(class='btn-block')
