extends ../layouts/unauthenticated.pug

block content
  .row.position-relative.mb-n5(style='z-index: 1;')
    .col-auto.mx-auto
      .bg-dark
        .card.border-0
          .card-body
            h1.h2.card-title= t('views.users.new.title')
  .row.mx-0
    .col.col-md-8.col-lg-5.mx-auto.bg-dark
      form.px-1.px-md-3.px-lg-4.pt-5.pb-4.pb-md-5.mt-3(action=route('users'), method='post')
        fieldset.mb-4
          +input('email', `${t('views.users.new.email')}*`, 'mail', values, errors)(type='email')
          +input('password', `${t('views.users.new.password')}*`, 'key', values, errors)(type='password')
          +input('repeatedPassword', `${t('views.users.new.repeatPassword')}*`, 'repeat', values, errors)(type='password')
        +submit(t('views.users.new.submit'))(class='btn-block')
